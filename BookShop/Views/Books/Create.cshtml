@model BookShop.Models.CreateBookViewModel

@{
    ViewBag.Title = "Create";
    SelectList selectListGenres = ViewBag.SelectListGenres as SelectList;
    IEnumerable<SelectListItem> selectListAuthors = ViewBag.SelectListAuthors as IEnumerable<SelectListItem>;
}

<div class="container">
    <h4>Добавление новой книги</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group d-flex flex-wrap justify-content-around">
                <div class="col-6">
                    <div>
                        @Html.LabelFor(model => model.Book.Title, "Название", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.Title, new { htmlAttributes = new { @class="form-control"} } )
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Book.Description, "Описание", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.Description, new { htmlAttributes = new { @class="form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Book.Pages, "Количество страниц", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.Pages, new { htmlAttributes = new { @class="form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Book.PublishName, "Название издательства", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.PublishName, new { htmlAttributes = new { @class="form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Book.PublishedYear, "Год издания", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.PublishedYear, new { htmlAttributes = new { @class="form-control" } })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Book.ImageUrl, "URL ссылка на обложку", new { @class="fw-semibold fs-5" })<br>
                        @Html.EditorFor(model => model.Book.ImageUrl, new { htmlAttributes = new { @class="form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Book.Title, "", new { @class = "text-danger" })
                </div>
                <div class="col-5">
                    <div>
                        @Html.LabelFor(model => model.AuthorId, "Жанр", new { @class="fw-semibold fs-5" })<br>
                        @Html.DropDownListFor(model => model.GenreId, selectListGenres, new { @class="form-control" })
                    </div>
                    <div>
                        @Html.LabelFor(model => model.AuthorId, "Автор", new { @class="fw-semibold fs-5" })<br>
                        @Html.DropDownListFor(model => model.AuthorId, selectListAuthors, new { @class="form-control"})
                    </div>
                </div>
                <div class="col-md-4 my-3">
                    <input type="submit" value="Добавить" class="btn btn-outline-dark btn-lg" />
                </div>
            </div>
        </div>
    }

</div>